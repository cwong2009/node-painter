{
  "name": "node-painter",
  "version": "1.0.0",
  "description": "A simple drawing progeam",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm test && tsc",
    "test": "mocha \"test/**/*.ts\"",
    "unit-test": "mocha \"test/unit/**/*.ts\"",
    "integrationtest": "mocha \"test/integration/**/*.ts\"",
    "e2e-test": "mocha \"test/e2e/**/*.ts\"",
    "test-with-coverage": "nyc mocha \"test/unit/**/*.ts\" \"test/integration/**/*.ts\"",
    "start": "ts-node src/server.ts",
    "lint": "tslint --project \"./tsconfig.json\" \"src/**/*.{ts,tsx}\"",
    "serve": "ts-node src/server.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/server.ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "keywords": [],
  "author": "Chris Wong",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon-chai": "^3.2.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.5",
    "follow-redirects": "^1.5.10",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0",
    "socket.io": "^2.5.0",
    "source-map-support": "^0.5.9",
    "string-format": "^2.0.0",
    "tslint-sonarts": "^1.8.0"
  }
}
